{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "target": "ES6",
    "types": ["node"],
    "module": "commonjs",
    "esModuleInterop": true,
    "rootDir": "./src",
    "outDir": "./build",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src/**/*", "prisma/seeders/**/*.ts"],
  "exclude": ["node_modules", "build", "prisma/seeders/**/*"]
}
